import org.springframework.web.bind.annotation.RequestBody;

import com.matiasjimenez.microservicios.app.quiz.models.entity.Categoria;
import com.matiasjimenez.microservicios.app.quiz.service.CategoriaService;

public class CategoriaController {
	
	@Autowired
